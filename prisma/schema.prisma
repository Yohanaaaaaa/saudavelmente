generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Patient {
  id           Int    @id @default(autoincrement())
  nomeCompleto String
  cpf          String @unique
  email        String @unique
  celular      String
  idade        Int
  cidade       String
  estado       String

  appointments Appointment[]
}

enum TipoAtendimento {
  VOLUNTARIO
  SOCIAL
}

model Therapist {
  id                      Int             @id @default(autoincrement())
  nomeCompleto            String
  email                   String          @unique
  celular                 String
  tipo_atendimento        TipoAtendimento
  verificacao_registro    Boolean         @default(false)
  numero_registro         String
  horarioDisponivel       String
  abordagem_e_experiencia String
  pix                     String
  cpf                     String?         @unique

  appointments Appointment[]
}

model Admin {
  id    Int    @id @default(autoincrement())
  nome  String
  email String @unique
  senha String

  createdAt DateTime @default(now())
}

enum AppointmentStatus {
  PENDENTE
  APROVADO
  CANCELADO
}

model Appointment {
  id Int @id @default(autoincrement())

  descricao           String
  horario_atendimento DateTime
  data_atendimento    String
  status              AppointmentStatus @default(PENDENTE)

  patientId   Int
  therapistId Int

  patient   Patient   @relation(fields: [patientId], references: [id])
  therapist Therapist @relation(fields: [therapistId], references: [id])

  payment Payment?

  createdAt DateTime @default(now())
}

enum PaymentStatus {
  PENDENTE
  PAGO
  CANCELADO
}

model Payment {
  id     Int           @id @default(autoincrement())
  valor  Float
  status PaymentStatus
  metodo String

  appointmentId Int         @unique
  appointment   Appointment @relation(fields: [appointmentId], references: [id])

  createdAt DateTime @default(now())
}
